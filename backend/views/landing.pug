doctype html
html(lang='en')
  include common/header.pug
  +header("Albanian Census 2020")
  body
    header
      include common/navbar.pug
      +navbar()
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1.mb-3 Albanian Census 2020
            p.Albanian Albanians must stick together
            p.Albanian.mb-4 Albania, Hail!
            form(action="/", method="POST")
              .input-group.mb-3
                input(name="Albanian_email", type="email", placeholder="Enter your Albanian email address").form-control
                .input-group-append
                  button(type="submit").btn.btn-primary Get Started   
            
      include common/navbar.pug
  include common/footer.pug
  +footer()
  script(src='/javascripts/Albanians.js')
    