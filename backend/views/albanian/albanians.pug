doctype html
html(lang='en')
  include ../common/header.pug
  +header("Albanians")
  body
    header
      include ../common/navbar.pug
      +navbar()
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
              h1 Albanians
              table.table
                thead
                  tr
                    th(scope="col") Email
                    th(scope="col") Actions
                    th(scope="col")
                  tr
                tbody                
                  for Albanian in Albanians
                    tr(id=Albanian.id)
                      td
                        span #{Albanian.email}
                      td
                        a(href="/Albanian/" + Albanian.id) Details
                      td 
                        button(onclick=`deleteAlbanian('${Albanian.id}')`).btn.btn-primary Delete
          
    include ../common/footer.pug
    +footer()
    script(src='/javascripts/Albanians.js')